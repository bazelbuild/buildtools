    name = "blaze_query_proto",
    srcs = ["build.proto"],
    visibility = ["//visibility:public"],
)

go_proto_library(
    name = "go_default_library",
    importpath = "github.com/bazelbuild/buildtools/build_proto",
    proto = ":blaze_query_proto",
    visibility = ["//visibility:public"],
)
